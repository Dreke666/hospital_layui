<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhang.hospital.dao.DepartDao">

    <select id="getAllUserList" resultType="com.zhang.hospital.entity.Doctor"
            parameterType="com.zhang.hospital.entity.DoctorSearch">
        select * from tb_doctor
        <where>
            1=1
            <if test="null != username and '' != username">
                and username like "%"#{username}"%"
            </if>
            <if test="null != realname and '' != realname">
                and realname like "%"#{realname}"%"
            </if>
            <if test="null != gender and -1 != gender">
                and gender = #{gender}
            </if>
            <if test="null != rank and -1 != rank">
                and rank = #{rank}
            </if>
            <if test="null != depart_id and -1 != depart_id">
                and depart_id = #{depart_id}
            </if>
            <if test="null != create_time_s and null != create_time_e and '' != create_time_s and '' != create_time_e">
                and createTime between #{create_time_s} and #{create_time_e}
            </if>
            <if test="'' != create_time_s and '' == create_time_e">
                and createTime between #{create_time_s} and curtime()
            </if>
            <if test="'' == create_time_s and '' != create_time_e">
                and createTime between '1900-01-01 00:00:00' and #{create_time_e}
            </if>
        </where>
        order by doctor_id
    </select>


    <select id="getCatalogList" resultType="com.zhang.hospital.entity.Depart">
        select * from tb_depart order by depart_id
    </select>


    <select id="getDepartByDepartName" resultType="com.zhang.hospital.entity.Depart">

        select * from tb_depart where depart_name=#{depart}
    </select>

    <insert id="addDepart" parameterType="com.zhang.hospital.entity.Depart">
        insert into tb_depart(depart_name)
        values (#{depart_name})
    </insert>

    <update id="updateDepart" parameterType="com.zhang.hospital.entity.Depart">
        update tb_depart
        <set>
            <if test="depart_name!=null">
                depart_name=#{depart_name}
            </if>
        </set>
        where  depart_id=#{depart_id}
    </update>

    <select id="getDepartById" resultType="com.zhang.hospital.entity.Depart">
        select * from tb_depart where depart_id=#{depart_id}
    </select>


    <select id="getAllDeparts" resultType="com.zhang.hospital.entity.Depart">
        select * from tb_depart
    </select>


    <delete id="delDepartById">
        delete from tb_depart where depart_id=#{depart_id}
    </delete>
</mapper>