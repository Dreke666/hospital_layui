<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhang.hospital.dao.NoteDao">



    <insert id="insNote" parameterType="com.zhang.hospital.entity.Note">
        insert into
        tb_note(create_time,realname,gender,birthday,note_title,note_content,
        user_id,doctor_id)
        values (#{create_time},#{realname},#{gender},#{birthday},
        #{note_title},#{note_content},#{user_id},#{doctor_id})
    </insert>


    <select id="getNoteList" resultType="com.zhang.hospital.entity.Note">
        select * from tb_note where doctor_id=#{doctor_id}
    </select>

    <select id="getNoteById" resultType="com.zhang.hospital.entity.Note">
        select * from tb_note where note_id=#{note_id}
    </select>

    <delete id="deleteNoteById">
        delete from tb_note where note_id=#{note_id}
    </delete>


    <update id="updateNote" parameterType="com.zhang.hospital.entity.Note">
        update tb_note
        <set>
            <if test="create_time!=null">
                create_time=#{create_time},
            </if>
            <if test="realname!=null">
                realname=#{realname},
            </if>
            <if test="gender!=null">
                gender=#{gender},
            </if>
            <if test="birthday!=null">
                birthday=#{birthday},
            </if>

            <if test="note_title!=null">
                note_title=#{note_title},
            </if>
            <if test="note_content!=null">
                note_content=#{note_content},
            </if>
            <if test="user_id!=null">
                user_id=#{user_id},
            </if>
            <if test="doctor_id!=null">
                doctor_id=#{doctor_id},
            </if>
        </set>
        where note_id=#{note_id}
    </update>


</mapper>