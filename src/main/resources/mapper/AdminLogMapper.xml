<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhang.hospital.dao.AdminDao">
    <!--记录管理员账号登录日志-->
    <update id="insAdminLog" parameterType="com.zhang.hospital.entity.AdminLog">
        insert into adminlog (adminUsername,loginIp,loginTime,logoutTime,isSafeExit) values (#{adminUsername}
        ,#{loginIp},#{loginTime},#{logoutTime},#{isSafeExit})

    </update>
    <select id="getAdminLogByUsername" resultType="com.zhang.hospital.entity.AdminLog">
        select * from adminlog where adminUsername=#{username}
    </select>

    <select id="getAdminLogByLoginTime"
            resultType="com.zhang.hospital.entity.AdminLog">
        select * from adminlog where loginTime=#{loginTime}
    </select>

    <update id="updateAdminLog" parameterType="com.zhang.hospital.entity.AdminLog">
        update adminlog
        <set>
            <if test="adminUsername!=null">
                adminUsername=#{adminUsername},
            </if>
            <if test="loginIp!=null">
                loginIp=#{loginIp},
            </if>
            <if test="loginTime!=null">
                loginTime=#{loginTime},
            </if>
            <if test="logoutTime!=null">
                logoutTime=#{logoutTime},
            </if>
            <if test="isSafeExit!=null">
                isSafeExit=#{isSafeExit},
            </if>
        </set>
        where id=#{id}

    </update>

    <select id="getAdminLogsList" resultType="com.zhang.hospital.entity.AdminLog">
        select * from adminlog order by id
    </select>
</mapper>